- provide :title, 'Tilify - Connexion'
.row
  .small-12.medium-8.columns.small-centered.formRow
    %h2.text-center Se connecter
    = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      .form-inputs
        = f.input :login, :required => false, :autofocus => true
        -# = f.input :email, :required => false
        = f.input :password, :required => false
        = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, "Connexion"
    = render "devise/shared/links"
    %br
    = link_to 'Se connecter en administrateur', new_admin_session_path
