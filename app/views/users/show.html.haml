              %h2 Activit&eacute;
              %br
              %br
              %ul.tabs{'data-tab' => ''}
                %li.tab-title.active
                  %a{:href => '#tuiles'}
                    %i.fa.fa-square
                      &nbsp;
                    Tuiles
                %li.tab-title
                  %a{:href => '#messages'}
                    %i.fa.fa-comments
                      &nbsp;
                    Messages
              .tabs-content
                #tuiles.content.active
