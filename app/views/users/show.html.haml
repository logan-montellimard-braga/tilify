- if (admin_signed_in? || ( user_signed_in? && current_user.id.to_s == params[:id]))
  - provide :title, 'Tilify - Profil ' + @user.username
  .row
    .columns.medium-10.small-centered.content
      %h1.text-center>
        Profil de
        %span.blue
